    <bean id="rrKitsessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="dataSource" ref="rrKitdataSource"></property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</prop>
                <prop key="hibernate.show_sql">${mysql.jdbc.hibernate.show_sql}</prop>
            </props>
        </property>
        <property name="packagesToScan" value="com.hel.rrKit" />
    </bean>

    <tx:annotation-driven transaction-manager="rrKittransactionManager"/>

    <bean id="rrKittransactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
        <property name="sessionFactory" ref="rrKitsessionFactory"/>
    </bean>
    
</beans>