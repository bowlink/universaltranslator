        <property name="logAbandoned" value="${mysql.jdbc.logAbandoned}" />
        <property name="removeAbandoned" value="${mysql.jdbc.removeAbandoned}" />
        <property name="initialSize" value="${mysql.jdbc.initialSize}" />
        <property name="maxActive" value="${mysql.jdbc.maxActive}" />
        <property name="maxIdle" value="${mysql.jdbc.maxIdle}" />
        <property name="minIdle" value="${mysql.jdbc.minIdle}" />
        <property name="timeBetweenEvictionRunsMillis" value="${mysql.jdbc.timeBetweenEvictionRunsMillis}" />
        <property name="validationQuery" value="${mysql.jdbc.validationQuery}" />
        <property name="validationInterval" value="${mysql.jdbc.validationInterval}" />
        <property name="testOnBorrow" value="${mysql.jdbc.testOnBorrow}" />
        <property name="removeAbandonedTimeout" value="${mysql.jdbc.removeAbandonedTimeout}" />
    </bean>
    
    <bean id="hmisKitsessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="dataSource" ref="hmisKitdataSource"></property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</prop>
                <prop key="hibernate.show_sql">${mysql.jdbc.hibernate.show_sql}</prop>
            </props>
        </property>
        <property name="packagesToScan" value="com.hel.hmiskit" />
    </bean>

    <tx:annotation-driven transaction-manager="hmisKittransactionManager"/>

    <bean id="hmisKittransactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
        <property name="sessionFactory" ref="hmisKitsessionFactory"/>
    </bean>
    
    <!-- rrKit Database Connection -->
    <bean id="rrKitdataSource" class="org.apache.tomcat.jdbc.pool.DataSource">
        <property name="driverClassName" value="${mysql.jdbc.driver}" />
        <property name="url" value="${mysql.jdbc.rrKitURL}" />
        <property name="username" value="${mysql.jdbc.rrKitUSER}" />
        <property name="password" value="${mysql.jdbc.rrKitPassword}" />
        <property name="logAbandoned" value="${mysql.jdbc.logAbandoned}" />
        <property name="removeAbandoned" value="${mysql.jdbc.removeAbandoned}" />
        <property name="initialSize" value="${mysql.jdbc.initialSize}" />
        <property name="maxActive" value="${mysql.jdbc.maxActive}" />
        <property name="maxIdle" value="${mysql.jdbc.maxIdle}" />
        <property name="minIdle" value="${mysql.jdbc.minIdle}" />
        <property name="timeBetweenEvictionRunsMillis" value="${mysql.jdbc.timeBetweenEvictionRunsMillis}" />
        <property name="validationQuery" value="${mysql.jdbc.validationQuery}" />
        <property name="validationInterval" value="${mysql.jdbc.validationInterval}" />
        <property name="testOnBorrow" value="${mysql.jdbc.testOnBorrow}" />
